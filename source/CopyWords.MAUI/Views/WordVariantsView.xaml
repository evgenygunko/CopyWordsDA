<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CopyWords.Core.ViewModels;assembly=CopyWords.Core"
             xmlns:views="clr-namespace:CopyWords.MAUI.Views"
             x:Class="CopyWords.MAUI.Views.WordVariantsView">

    <ContentView.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="wordVariantsTemplate"
                        x:DataType="viewmodels:WordVariantViewModel">
                
                <VerticalStackLayout>
                    <BoxView Color="LightGray" HeightRequest="1"/>

                    <!-- Word variant -->
                    <VerticalStackLayout VerticalOptions="Center" Padding="10">
                        <Label FontSize="Subtitle" Text="{Binding WordES, FallbackValue='WordES'}" />
                        <Label TextColor="Gray" Text="{Binding WordType, FallbackValue='WordType'}" />

                        <!-- Contexts -->
                        <views:ContextsView />
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </DataTemplate>
        </ResourceDictionary>
    </ContentView.Resources>

    <VerticalStackLayout 
            BindableLayout.ItemsSource="{Binding WordVariantViewModels}"
            BindableLayout.ItemTemplate="{StaticResource wordVariantsTemplate}" />
    
</ContentView>
