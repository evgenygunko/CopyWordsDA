<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/maui/global"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CopyWords.MAUI.Views.CannotCheckUpdates"
             x:DataType="GetUpdateViewModel"
             Title="CannotCheckUpdates">
    <VerticalStackLayout VerticalOptions="Center"  Margin="20">
        <Label
            Text="An error occurred while checking for updates."
            FontSize="Subtitle"
            VerticalOptions="Center" />
        <Label
            Margin="0,10,0,0"
            Text="{Binding ErrorMessage}" />

        <Grid HorizontalOptions="Center" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Button
                Grid.Row="0"
                Grid.Column="1"
                Text="Close"
                Command="{Binding CloseDialogCommand}" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>