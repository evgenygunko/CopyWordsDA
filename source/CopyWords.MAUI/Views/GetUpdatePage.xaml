<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CopyWords.MAUI.Views.GetUpdatePage"
             xmlns:viewmodels="clr-namespace:CopyWords.Core.ViewModels;assembly=CopyWords.Core"
             x:DataType="viewmodels:GetUpdateViewModel"
             Title="Update avaliable">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding GetLatestReleaseCommand}" />
    </ContentPage.Behaviors>

    <VerticalStackLayout
        VerticalOptions="Center">
        <Label
            Text="Do you want to download an update?"
            VerticalOptions="Center"
            HorizontalOptions="Center" />

        <Label Text="Version:" />
        <Label Text="{Binding Path=LatestVersion}" />
        <Button Text="Not now" Command="{Binding CloseDialogCommand}">

        </Button>
    </VerticalStackLayout>
</ContentPage>