<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/maui/global"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CopyWords.MAUI.Views.SettingsPage"
             x:DataType="SettingsViewModel"
             x:Name="contentPageSettingsPage"
             Title="Settings"
             Shell.BackgroundColor="{StaticResource Gray500}">

    <ContentPage.Behaviors>
        <EventToCommandBehavior
            EventName="Appearing"
            BindingContext="{Binding Path=BindingContext, Source={x:Reference contentPageSettingsPage}, x:DataType=SettingsPage}"
            Command="{Binding InitCommand}" />
    </ContentPage.Behaviors>

    <ScrollView>
        <OnPlatform x:TypeArguments="View">
            <On Platform="Android">
                <SettingsViewAndroid />
            </On>
            <On Platform="WinUI, MacCatalyst">
                <SettingsViewWindows />
            </On>
        </OnPlatform>
    </ScrollView>
</ContentPage>
