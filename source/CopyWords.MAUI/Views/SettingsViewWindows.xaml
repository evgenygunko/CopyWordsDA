<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/maui/global"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:validation="clr-namespace:CopyWords.Core.Validators;assembly=CopyWords.Core"
             x:DataType="SettingsViewModel"
             x:Class="CopyWords.MAUI.Views.SettingsViewWindows">

    <ContentView.Resources>
        <MyIsStringNotNullOrWhiteSpaceConverter x:Key="IsStringNotNullOrWhiteSpaceConverter" />
        <ShowErrorConverter x:Key="ShowErrorConverter" />
    </ContentView.Resources>

    <Grid Padding="20,0,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Export and Import settings -->
        <Border Grid.Row="0" Style="{StaticResource SettingsBorderStyle}">
            <VerticalStackLayout>
                <Label Text="Backup &amp; restore" Style="{StaticResource SettingsSectionHeaderStyle}" />
                <Label Text="Export your preferences or import them from a file." Style="{StaticResource SettingsSectionDescriptionStyle}" />

                <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                    <Button
                        Text="Export"
                        Command="{Binding ExportSettingsCommand}" />
                    <Button
                        Text="Import"
                        Command="{Binding ImportSettingsCommand}" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>

        <!-- AnkiConnect settings -->
        <Border Grid.Row="1" Style="{StaticResource SettingsBorderStyle}">
            <VerticalStackLayout>
                <Label Text="AnkiConnect" Style="{StaticResource SettingsSectionHeaderStyle}" />

                <HorizontalStackLayout Spacing="8" Margin="0,10,0,0">
                    <CheckBox
                        IsChecked="{Binding ShowCopyWithAnkiConnectButton}"
                        VerticalOptions="Center" />
                    <Label
                        Text="Show copy with AnkiConnect"
                        Style="{StaticResource CheckBoxLabelStyle}" />
                </HorizontalStackLayout>

                <!-- Anki Deck Name Danish -->
                <Label Text="Deck name (Danish):" Style="{StaticResource SettingsFieldLabelStyle}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Entry Grid.Column="0"
                           IsEnabled="False"
                           Style="{StaticResource InputEntryStyle}"
                           Text="{Binding AnkiDeckNameDanish}" />
                    <ImageButton Grid.Column="1"
                        Margin="8,0,0,0"
                        IsEnabled="{Binding ShowCopyWithAnkiConnectButton}"
                        Command="{Binding SelectAnkiDeckNameDanishCommand}">
                        <ImageButton.Source>
                            <FontImageSource
                                FontFamily="MaterialIconsOutlined-Regular"
                                Glyph="{x:Static MaterialDesignIconFonts.Arrow_drop_down}"
                                Color="{Binding ButtonIconColor}"/>
                        </ImageButton.Source>
                    </ImageButton>
                </Grid>

                <!-- Anki Deck Name Spanish -->
                <Label Text="Deck name (Spanish):" Style="{StaticResource SettingsFieldLabelStyle}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Entry Grid.Column="0"
                           IsEnabled="False"
                           Style="{StaticResource InputEntryStyle}"
                           Text="{Binding AnkiDeckNameSpanish}" />
                    <ImageButton Grid.Column="1"
                        Margin="8,0,0,0"
                        IsEnabled="{Binding ShowCopyWithAnkiConnectButton}"
                        Command="{Binding SelectAnkiDeckNameSpanishCommand}">
                        <ImageButton.Source>
                            <FontImageSource
                                FontFamily="MaterialIconsOutlined-Regular"
                                Glyph="{x:Static MaterialDesignIconFonts.Arrow_drop_down}"
                                Color="{Binding ButtonIconColor}"/>
                        </ImageButton.Source>
                    </ImageButton>
                </Grid>

                <!-- Anki Model Name -->
                <Label Text="Model name:" Style="{StaticResource SettingsFieldLabelStyle}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Entry Grid.Column="0"
                           IsEnabled="False"
                           Style="{StaticResource InputEntryStyle}"
                           Text="{Binding AnkiModelName}" />
                    <ImageButton Grid.Column="1"
                        Margin="8,0,0,0"
                        IsEnabled="{Binding ShowCopyWithAnkiConnectButton}"
                        Command="{Binding SelectAnkiModelNameCommand}">
                        <ImageButton.Source>
                            <FontImageSource
                                FontFamily="MaterialIconsOutlined-Regular"
                                Glyph="{x:Static MaterialDesignIconFonts.Arrow_drop_down}"
                                Color="{Binding ButtonIconColor}"/>
                        </ImageButton.Source>
                    </ImageButton>
                </Grid>

                <!-- Path to Anki media collection -->
                <Label Text="Path to Anki media collection:" Style="{StaticResource SettingsFieldLabelStyle}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Entry Grid.Column="0"
                           IsEnabled="{Binding ShowCopyWithAnkiConnectButton}"
                           Style="{StaticResource InputEntryStyle}"
                           Text="{Binding AnkiSoundsFolder}" />
                    <ImageButton Grid.Column="1"
                        Margin="8,0,0,0"
                        IsEnabled="{Binding ShowCopyWithAnkiConnectButton}"
                        Command="{Binding PickAnkiSoundsFolderCommand}">
                        <ImageButton.Source>
                            <FontImageSource
                                FontFamily="MaterialIconsOutlined-Regular"
                                Glyph="{x:Static MaterialDesignIconFonts.Folder_open}"
                                Color="{Binding ButtonIconColor}"/>
                        </ImageButton.Source>
                    </ImageButton>
                </Grid>

                <Label
                    Text="{Binding ValidationResult, Converter={StaticResource ShowErrorConverter}, ConverterParameter={x:Static validation:SettingsViewModelValidator.AnkiSoundsFolderProperty}}"
                    TextColor="Red"
                    Margin="0,4,0,0" />
            </VerticalStackLayout>
        </Border>

        <!-- Translation settings -->
        <Border Grid.Row="2" Style="{StaticResource SettingsBorderStyle}">
            <VerticalStackLayout>
                <Label Text="Copy buttons" Style="{StaticResource SettingsSectionHeaderStyle}" />

                <VerticalStackLayout Spacing="8" Margin="0,10,0,0">
                    <HorizontalStackLayout Spacing="8">
                        <CheckBox
                            IsChecked="{Binding ShowCopyButtons}"
                            VerticalOptions="Center" />
                        <Label
                            Text="Show copy buttons"
                            Style="{StaticResource CheckBoxLabelStyle}" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="8">
                        <CheckBox
                            IsChecked="{Binding CopyTranslatedMeanings}"
                            VerticalOptions="Center" />
                        <Label
                            Text="Copy translated meanings"
                            Style="{StaticResource CheckBoxLabelStyle}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Border>

        <!-- Theme settings -->
        <Border Grid.Row="3" Style="{StaticResource SettingsBorderStyle}">
            <VerticalStackLayout>
                <Label Text="Theme" Style="{StaticResource SettingsSectionHeaderStyle}" />

                <HorizontalStackLayout Spacing="8" Margin="0,10,0,0">
                    <CheckBox
                        IsChecked="{Binding UseDarkTheme}"
                        VerticalOptions="Center" />
                    <Label
                        Text="Dark theme"
                        Style="{StaticResource CheckBoxLabelStyle}" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>

        <HorizontalStackLayout Grid.Row="4"
                Margin="0,20,0,20"
                HorizontalOptions="End"
                Spacing="10">

            <Button
                    Text="Save"
                    Command="{Binding SaveSettingsCommand}"/>
            <Button
                    Text="Cancel"
                    Command="{Binding CancelCommand}"/>
        </HorizontalStackLayout>

        <Label Grid.Row="5"
                Text="{Binding About}"
                VerticalOptions="End" />
    </Grid>
</ContentView>
