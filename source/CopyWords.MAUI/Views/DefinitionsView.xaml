<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Toolkit.Buttons;assembly=Syncfusion.Maui.Toolkit"
             xmlns:helpers="clr-namespace:CopyWords.MAUI.Helpers"
             xmlns:converters="clr-namespace:CopyWords.MAUI.Converters"
             xmlns:views="clr-namespace:CopyWords.MAUI.Views"
             xmlns:viewmodels="clr-namespace:CopyWords.Core.ViewModels;assembly=CopyWords.Core"
             x:Class="CopyWords.MAUI.Views.DefinitionsView">

    <ContentView.Resources>
        <ResourceDictionary>
            <!-- Workaround for a crash on Mac: type IsStringNotNullOrWhiteSpaceConverter cannot be found -->
            <!--<toolkit:IsStringNotNullOrWhiteSpaceConverter x:Key="IsStringNotNullOrWhiteSpaceConverter" />-->
            <converters:MyIsStringNotNullOrWhiteSpaceConverter x:Key="IsStringNotNullOrWhiteSpaceConverter" />

            <DataTemplate x:Key="definitionsTemplate"
                          x:DataType="viewmodels:DefinitionViewModel">
                <!-- Definitions -->
                <VerticalStackLayout>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <!-- Copy front, copy back, copy endings, and copy examples buttons -->
                        <FlexLayout Grid.Row="0"
                                Margin="0,15,0,0"
                                Direction="Row"
                                Wrap="Wrap"
                                AlignItems="Start">

                            <buttons:SfButton
                                    Margin="0,0,2,2"
                                    WidthRequest="{OnPlatform 85, Android=60}"
                                    ToolTipProperties.Text="Copy text for the Anki 'Front' field"
                                    BackgroundColor="{Binding CopyFrontButtonColor}"
                                    Command="{Binding CopyFrontCommand}">

                                <buttons:SfButton.Content>
                                    <DataTemplate>
                                        <HorizontalStackLayout>
                                            <Image Margin="10,0,5,0" WidthRequest="20" HeightRequest="20">
                                                <Image.Source>
                                                    <FontImageSource
                                                        FontFamily="MaterialIconsOutlined-Regular"
                                                        Glyph="{x:Static helpers:MaterialDesignIconFonts.Content_copy}" />
                                                </Image.Source>
                                            </Image>

                                            <Label Text="Front" VerticalOptions="Center" TextColor="White" />
                                        </HorizontalStackLayout>
                                    </DataTemplate>
                                </buttons:SfButton.Content>
                            </buttons:SfButton>

                            <buttons:SfButton
                                    Margin="0,0,2,2"
                                    WidthRequest="{OnPlatform 85, Android=60}"
                                    ToolTipProperties.Text="Copy text for the Anki 'Back' field"
                                    BackgroundColor="{Binding CopyBackButtonColor}"
                                    Command="{Binding CopyBackCommand}">

                                <buttons:SfButton.Content>
                                    <DataTemplate>
                                        <HorizontalStackLayout>
                                            <Image Margin="10,0,5,0" WidthRequest="20" HeightRequest="20">
                                                <Image.Source>
                                                    <FontImageSource
                                                        FontFamily="MaterialIconsOutlined-Regular"
                                                        Glyph="{x:Static helpers:MaterialDesignIconFonts.Content_copy}" />
                                                </Image.Source>
                                            </Image>

                                            <Label Text="Back" VerticalOptions="Center" TextColor="White" />
                                        </HorizontalStackLayout>
                                    </DataTemplate>
                                </buttons:SfButton.Content>
                            </buttons:SfButton>

                            <buttons:SfButton
                                    Margin="0,0,2,2"
                                    WidthRequest="{OnPlatform 85, Android=60}"
                                    ToolTipProperties.Text="Copy text for the Anki 'PartOfSpeech' field"
                                    BackgroundColor="{Binding CopyPartOfSpeechButtonColor}"
                                    Command="{Binding CopyPartOfSpeechCommand}">

                                <buttons:SfButton.Content>
                                    <DataTemplate>
                                        <HorizontalStackLayout>
                                            <Image Margin="10,0,5,0" WidthRequest="20" HeightRequest="20">
                                                <Image.Source>
                                                    <FontImageSource
                                                        FontFamily="MaterialIconsOutlined-Regular"
                                                        Glyph="{x:Static helpers:MaterialDesignIconFonts.Content_copy}" />
                                                </Image.Source>
                                            </Image>

                                            <Label Text="Type" VerticalOptions="Center" TextColor="White" />
                                        </HorizontalStackLayout>
                                    </DataTemplate>
                                </buttons:SfButton.Content>
                            </buttons:SfButton>

                            <buttons:SfButton
                                    Margin="0,0,2,2"
                                    WidthRequest="{OnPlatform 100, Android=60}"
                                    ToolTipProperties.Text="Copy text for the Anki 'Forms' field"
                                    BackgroundColor="{Binding CopyEndingsButtonColor}"
                                    Command="{Binding CopyEndingsCommand}">

                                <buttons:SfButton.Content>
                                    <DataTemplate>
                                        <HorizontalStackLayout>
                                            <Image Margin="10,0,5,0" WidthRequest="20" HeightRequest="20">
                                                <Image.Source>
                                                    <FontImageSource
                                                        FontFamily="MaterialIconsOutlined-Regular"
                                                        Glyph="{x:Static helpers:MaterialDesignIconFonts.Content_copy}" />
                                                </Image.Source>
                                            </Image>

                                            <Label Text="Endings" VerticalOptions="Center" TextColor="White" />
                                        </HorizontalStackLayout>
                                    </DataTemplate>
                                </buttons:SfButton.Content>
                            </buttons:SfButton>

                            <buttons:SfButton
                                    WidthRequest="{OnPlatform 110, Android=60}"
                                    ToolTipProperties.Text="Copy text for the Anki 'Example' field"
                                    BackgroundColor="{Binding CopyExamplesButtonColor}"
                                    Command="{Binding CopyExamplesCommand}">

                                <buttons:SfButton.Content>
                                    <DataTemplate>
                                        <HorizontalStackLayout>
                                            <Image Margin="10,0,5,0" WidthRequest="20" HeightRequest="20">
                                                <Image.Source>
                                                    <FontImageSource
                                                        FontFamily="MaterialIconsOutlined-Regular"
                                                        Glyph="{x:Static helpers:MaterialDesignIconFonts.Content_copy}" />
                                                </Image.Source>
                                            </Image>

                                            <Label Text="Examples" VerticalOptions="Center" TextColor="White" />
                                        </HorizontalStackLayout>
                                    </DataTemplate>
                                </buttons:SfButton.Content>
                            </buttons:SfButton>
                        </FlexLayout>

                        <!-- Headword -->
                        <VerticalStackLayout Grid.Row="1" Margin="0,10,0,0" VerticalOptions="Center">
                            <Label FontSize="Subtitle" Text="{Binding HeadwordViewModel.Original, FallbackValue='afeitar'}" />
                            <Label TextColor="Gray" Text="{Binding PartOfSpeech, FallbackValue='transitive verb'}" />
                        </VerticalStackLayout>

                        <!-- Block with headword and its translations -->
                        <views:HeadwordView Grid.Row="2"
                                IsVisible="{Binding HeadwordViewModel.English, Converter={StaticResource IsStringNotNullOrWhiteSpaceConverter}}"
                                BindingContext="{Binding Path=HeadwordViewModel}"
                                Margin="0,5,0,0" />

                        <!-- Endings -->
                        <HorizontalStackLayout Grid.Row="3"
                                    IsVisible="{Binding Endings, Converter={StaticResource IsStringNotNullOrWhiteSpaceConverter}}">

                            <Border
                                    BackgroundColor="{StaticResource GreyBoxColor}"
                                    Stroke="#CCCCCC"
                                    StrokeThickness="1"
                                    Margin="0,10,0,10">
                                <Label Text="BØJNING" Margin="3,5,3,3" />
                            </Border>
                            <Label Text="{Binding Endings, FallbackValue=' -t, -e || -ere, -est'}" Margin="5,0,0,0" VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <!-- Horizontal line -->
                        <BoxView Grid.Row="4" Color="LightGray" HeightRequest="1" Margin="0,10,0,0" />

                        <!-- Contexts -->
                        <views:ContextsView Grid.Row="5" Margin="0,15,0,0" />
                    </Grid>
                </VerticalStackLayout>
            </DataTemplate>
        </ResourceDictionary>
    </ContentView.Resources>

    <VerticalStackLayout
            x:DataType="viewmodels:WordViewModel"
            BindableLayout.ItemsSource="{Binding DefinitionViewModels}"
            BindableLayout.ItemTemplate="{StaticResource definitionsTemplate}" />

</ContentView>
